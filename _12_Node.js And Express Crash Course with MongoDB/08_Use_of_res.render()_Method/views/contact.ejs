<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Us</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 40px;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      background: rgba(255, 255, 255, 0.95);
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      backdrop-filter: blur(10px);
    }

    h1 {
      color: #2c3e50;
      text-align: center;
      margin-bottom: 40px;
      font-size: 2.5em;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    .contact-form {
      display: grid;
      gap: 25px;
    }

    .form-group {
      display: flex;
      flex-direction: column;
    }

    label {
      margin-bottom: 8px;
      color: #34495e;
      font-weight: 500;
      font-size: 0.95em;
      letter-spacing: 0.5px;
    }

    input,
    textarea {
      padding: 15px;
      border: 2px solid #e0e0e0;
      border-radius: 10px;
      font-size: 16px;
      transition: all 0.3s ease;
      background: rgba(255, 255, 255, 0.9);
    }

    input:focus,
    textarea:focus {
      border-color: #3498db;
      box-shadow: 0 0 10px rgba(52, 152, 219, 0.1);
      outline: none;
    }

    button {
      background: linear-gradient(45deg, #3498db, #2980b9);
      color: white;
      padding: 15px 30px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      font-size: 16px;
      font-weight: 600;
      letter-spacing: 1px;
      text-transform: uppercase;
      transition: all 0.3s ease;
      box-shadow: 0 5px 15px rgba(52, 152, 219, 0.3);
    }

    button:hover {
      transform: translateY(-2px);
      box-shadow: 0 7px 20px rgba(52, 152, 219, 0.4);
    }

    .header-image {
      width: 100%;
      height: 250px;
      object-fit: cover;
      border-radius: 15px;
      margin-bottom: 30px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .success-popup {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      z-index: 1000;
      text-align: center;
    }

    .success-popup h3 {
      color: #2c3e50;
      margin-bottom: 15px;
    }

    .overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.7);
      z-index: 999;
      backdrop-filter: blur(5px);
    }

    @media (max-width: 768px) {
      body {
        padding: 20px;
      }

      .container {
        padding: 20px;
      }

      h1 {
        font-size: 2em;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <img src="https://images.unsplash.com/photo-1423666639041-f56000c27a9a?ixlib=rb-4.0.3" alt="Contact Us" class="header-image">

    <h1>Get in Touch</h1>

    <form class="contact-form" id="contactForm" onsubmit="return handleSubmit(event)">
      <div class="form-group">
        <label for="name">Full Name</label>
        <input type="text" id="name" name="name" required placeholder="Enter your name">
      </div>

      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" required placeholder="Enter your email">
      </div>

      <div class="form-group">
        <label for="subject">Subject</label>
        <input type="text" id="subject" name="subject" required placeholder="What's this about?">
      </div>

      <div class="form-group">
        <label for="message">Your Message</label>
        <textarea id="message" name="message" rows="6" required placeholder="Type your message here..."></textarea>
      </div>

      <button type="submit">Send Message</button>
    </form>
  </div>

  <div class="overlay" id="overlay"></div>
  <div class="success-popup" id="successPopup">
    <h3>Thank you for reaching out!</h3>
    <p>We've received your message and will get back to you soon.</p>
    <button onclick="closePopup()">Close</button>
  </div>

  <script>
    // Show popup, simulate async submit, clear form
    function handleSubmit(event) {
      event.preventDefault();
      const form = document.getElementById('contactForm');
      const overlay = document.getElementById('overlay');
      const popup = document.getElementById('successPopup');
      const submitBtn = form.querySelector('button[type="submit"]');

      // Immediate feedback
      submitBtn.disabled = true;
      submitBtn.textContent = 'Sending...';

      // Simulate a server request (replace with real fetch/XHR if needed)
      setTimeout(() => {
        overlay.style.display = 'block';
        popup.style.display = 'block';

        // reset form and restore button
        form.reset();
        submitBtn.disabled = false;
        submitBtn.textContent = 'Send Message';
      }, 700);

      return false;
    }

    function closePopup() {
      document.getElementById('overlay').style.display = 'none';
      document.getElementById('successPopup').style.display = 'none';
    }

    // Close when clicking the dim overlay or pressing Escape
    document.addEventListener('click', (e) => {
      if (e.target && e.target.id === 'overlay') closePopup();
    });
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closePopup();
    });
  </script>
</body>

</html>